<h1>Sign in</h1>
<%= form_for(:session, :url=>sessions_path,aff:" " )do |f|%>

  <div class ="field">
  <%=f.label :email %><br/>
  <%=f.text_field :email %>
  </div>
  <div class ="field"
   <%=f.label :password %><%= link_to "(forgot password)", new_password_reset_path,aff:" "  %><br/>
   <%=f.password_field :password %>
  </div>
  <div class ="actions">
  <%=f.submit "Sign in" ,aff:" " %><br/>
 </div>
<% end %>
 <p> New user? <%= link_to "Sign up now!",signup_path,aff:" "  %></p>
